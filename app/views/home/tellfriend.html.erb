<script src="/javascripts/live.js"></script>

<div style="position:absolute; left:20px; top:100px; text-align: left ; font-family:'Arial'; font-size:11pt;" >
<h2>Tell a friend</h2>
<h5>Fill in your friend's name and email address, and if you know it, their birthdate, and we'll send them <br>a personalised email to welcome them to Minetoo.</h5>
<%= form_tag(:controller => "home", :action => "invite") do %>
<table cellspacing=15>
	<tr>
		<td>Your friend name</td>
		<td><%= text_field :tell, :name, "size" => 20 %></td>
	</tr>
	<tr>
		<td>Your friend E_mail</td>
		<td><%= text_field :tell,  :email, "size" => 20 %></td>
	</tr>
	<tr>
		<td>Birth date (optional)</td>
		<td><%= text_field :tell,  :birthdate, "size" => 20 %></td>
	</tr>
	<tr>
		<th>Message (optional)</th>
		<td><%=text_area :tell,  :biography, :rows=>5, :cols=>30%></td>
	</tr>
	<tr>
		<td>Your name</td>
		<td><%= text_field :tell,  :your_name, "size" => 20 %></td>
	</tr>
	<tr>
		<td>Your E_mail</td>
		<td><%= text_field :tell,  :your_email, "size" => 20 %></td>
	</tr>
	<tr>
		<td></td>
		<td><%= submit_tag 'Send invitation' %></td>
	</tr>
</table>
<% end %>
</div>

<script>
var f1 = new LiveValidation('tell_name');
f1.add( Validate.Presence );
var f2 = new LiveValidation('tell_email');
f2.add( Validate.Presence );
f2.add( Validate.Email );
var f3 = new LiveValidation('tell_your_name');
f3.add( Validate.Presence );
var f4 = new LiveValidation('tell_your_email');
f4.add( Validate.Presence );
f4.add( Validate.Email );
</script>
