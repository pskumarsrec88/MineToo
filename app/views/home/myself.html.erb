<script src="/javascripts/live.js"></script>
<div style="position:absolute; left:50px; top:115px; text-align: left ; font-family:'Arial'; font-size:10pt;" >
<h2>Myself</h2>

<%=form_for :user, :url=>{:action=>'myselfupdate', :controller=>'home'} do |f|%>
<%= f.error_messages %>
	<p>Choose when you'd like us to contact you.</p>
	<table class="curvedEdges" cellspacing=10 width=500>		
		<tr>
			<th></th>
			<td>Where do you live?.</td>
		</tr>
		<tr>
			<th>Town/City</th>
			<td><%= f.text_field :living_city, "size" => 15%><font color="red">*</font></td>
		</tr>
		<tr>
			<th>Country</th>
			<td><%= f.country_select :living_country %><font color="red">*</font></td>
		</tr>
		<tr>
			<th></th>
			<td>Where were you born?.</td>
		</tr>
		<tr>
			<th>Town/City</th>
			<td><%= f.text_field :born_city, "size" => 15%><font color="red">*</font></td>
		</tr>
		<tr>
			<th>Country</th>
			<td><%= f.country_select :born_country %><font color="red">*</font></td>
		</tr>
		<tr>
			<th>Biography</th>
			<td><%=f.text_area :biography, :rows=>10, :cols=>40%><font color="red">*</font></td>
		</tr>
		<tr>
			<th></th>
			<td><%= f.submit "Save Changes"%></td>
		</tr>
	</table>
<% end %>
</div>


<style type="text/css">
table.curvedEdges { border:3px solid #98FB98; }
</style>

<script>
var f1 = new LiveValidation('user_living_city');
f1.add( Validate.Presence );
var f1 = new LiveValidation('user_living_country');
f1.add( Validate.Presence );
var f1 = new LiveValidation('user_born_city');
f1.add( Validate.Presence );
var f1 = new LiveValidation('user_born_country');
f1.add( Validate.Presence );
var f1 = new LiveValidation('user_biography');
f1.add( Validate.Presence );
</script>
